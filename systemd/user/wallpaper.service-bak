[Unit]
Description=Linux Wallpaper Engine with Periodic Restart
After=graphical-session.target

[Service]
Type=simple
# 加上这两行，让服务能找到 Wayland 会话
Environment=WAYLAND_DISPLAY=wayland-1
Environment=XDG_RUNTIME_DIR=/run/user/1000
ExecStart=/home/source/bin/toggle_wallpaper.sh
Restart=always
RuntimeMaxSec=1h
TimeoutStopSec=10

[Install]
WantedBy=graphical-session.target
